<div class="container">
   <div class="grid">
       <div class="col-md-6">
           <div class="register_box">
               <h1 class="register_title text-center">REGISTER</h1>
               <form>
                  <div class="form-group">
                     <input type="text" class="form-control custom_input" placeholder="Full Name" required>
                  </div>
                  <div class="form-group">
                     <input type="email" class="form-control custom_input" placeholder="Email" required>
                  </div>
                  <div class="form-group">
                     <input type="password" class="form-control custom_input" placeholder="Password" required>
                  </div>
                  <div class="form-group">
                     <input type="password" class="form-control custom_input" placeholder="Confirm Password" required>
                  </div>
                  <div class="register_btn_container text-center">
                     <button type="submit" class="register_btn mt-3" style="width: 125px; height: 40px;">Register Now</button>
                  </div>
                  <div class="login_link_container text-center">
                     <p>Already have an account? <a href="login.html" class="login_link">Login here</a></p>
                  </div>
               </form>
            </div>
       </div>
   </div>
</div>
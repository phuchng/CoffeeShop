<div class="container">
    <div class="grid">
       <div class="col-md-6">
          <div class="login_box">
             <h1 class="login_title text-center mb-4">LOGIN</h1>
             <form>
                <div class="form-group mb-4">
                   <input type="email" class="form-control custom_input" placeholder="Email" required>
                </div>
                <div class="form-group mb-4">
                   <input type="password" class="form-control custom_input" placeholder="Password" required>
                </div>
                <div class="login_btn_container text-center">
                   <button type="submit" style="width: 75px; height: 40px;" class="main_btn">LOGIN</button>
                </div>
                <p class="register_text text-center mt-4">
                   Don't have an account? <a href="/register" class="register_link">Register here</a>
                </p>
             </form>
          </div>
       </div>
    </div>
 </div> 
    <div class="container">
        <% if (error_msg) { %>
            <h1 class="d-flex justify-content-center"><span class="badge text-danger"><%= error_msg %></span></h1>
          <% } %>
      
          <% if (success_msg) { %>
            <h1 class="d-flex justify-content-center"><span class="badge text-success"><%= success_msg %></span></h1>
          <% } %>
       <div class="row justify-content-center">
          <div class="col-md-6">
             <div class="register_box">
                <h1 class="register_title text-center">FORGOT PASSWORD?</h1>
                <form class="register_form" action="/forgot-password" method="post">
                   <div class="form-group">
                      <input type="text" class="form-control custom_input" name="email" id="email" placeholder="Email" required>
                   </div>
                   <div class="register_btn_container text-center">
                      <button type="submit" class="register_btn mt-3" style="width: 125px; height: 40px;">Send Email</button>
                   </div>
                   <div class="login_link_container text-center">
                      <p>Remembered your password? <a href="/login" class="login_link">Login here</a></p>
                   </div>
                </form>
             </div>
          </div>
       </div>
    </div>
<body>
    <div class="AHomepage-box AHomepage-box-color">
        <%- include('./adminSidebar') %>
        <div class="box-content">
            <a href="/login"><button class="box-content-button">RETURN TO LOG-IN PAGE</button></a>
            <div id="content-container">
                <%- body %>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // Set active class on page load
            function setActiveLink() {
                const currentPath = window.location.pathname;
                $(`.box-sidebar--item-link`).removeClass('active');
                $(`.box-sidebar--item-link[href="${currentPath}"]`).addClass('active');
            }

            // Call setActiveLink on page load
            setActiveLink();
        });
    </script>
</body>


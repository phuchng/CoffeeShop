<div class="container">
    <% if (error_msg) { %>
        <h1 class="d-flex justify-content-center"><span class="badge text-danger"><%= error_msg %></span></h1>
        <% } %>

        <% if (success_msg) { %>
        <h1 class="d-flex justify-content-center"><span class="badge text-success"><%= success_msg %></span></h1>
        <% } %>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="register_box">
            <h1 class="register_title text-center">RESET PASSWORD?</h1>
            <form class="register_form" action="/reset-password" method="post">
                <div class="form-group">
                    <input type="password" class="form-control custom_input" name="newPassword" id="newPassword" placeholder="New Pasword" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control custom_input" name="passwordConfirm" id="passwordConfirm" placeholder="Confirm Pasword" required>
                </div>
                <div class="register_btn_container text-center">
                    <button type="submit" class="register_btn mt-3" style="width: 125px; height: 40px;">Reset Password</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>
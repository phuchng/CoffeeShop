<div>
    <h1 class="box-categories--header">Manage Categories</h1>

    <div id="message"></div>

    <!-- Form for Adding New Category -->
    <h2 class="box-categories--header">Add New Category</h2>
    <form id="addCategoryForm" action="/admin/categories/add" method="POST" class="box-categories--form">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea>
        <label for="subcategories">Subcategories (comma-separated):</label>
        <input type="text" id="subcategories" name="subcategories">
        <button type="submit" class="box-categories--form--button">Add Category</button>
    </form>

    <!-- List of Existing Categories -->
    <h2 class="box-categories--header">Existing Categories</h2>
    <ul id="category-list" class="box-category-list">
        <% categories.forEach(category => { %>
            <li class="box-category-item">
                <div class="box1-category-item">
                    <div>
                        <span id="category-name-<%= category._id %>"><%= category.name %></span> - 
                        <span id="category-description-<%= category._id %>"><%= category.description %></span>
                        <span id="category-subcategories-<%= category._id %>">
                            <% if (category.subcategories && category.subcategories.length > 0) { %>
                                (Subcategories: <%= category.subcategories.join(', ') %>)
                            <% } %>
                        </span>
                    </div>
                    <div>
                        <button class="edit-category" data-id="<%= category._id %>">Edit</button>
                        <form action="/admin/categories/delete/<%= category._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="delete-category">Delete</button>
                        </form>
                    </div>                
                </div>
                
                <!-- Form for Updating Category -->
                <form action="/admin/categories/update/<%= category._id %>" method="POST" class="update-form" id="update-form-<%= category._id %>" style="display:none;">
                    <div class="update-form--box">
                        <label for="" style="margin-right: 5px;">Name: </label>
                        <input type="text" name="name" value="<%= category.name %>" style="margin-right: 20px;" required>
                        <label for="" style="margin-right: 5px;">Description:</label>
                        <textarea name="description" style="width: 400px; "><%= category.description %></textarea>
                        <label for="subcategories">Subcategories (comma-separated):</label>
                        <input type="text" name="subcategories" value="<%= category.subcategories ? category.subcategories.join(', ') : '' %>">
                    </div>
                    
                    <div style="margin-top: 10px;">
                        <button type="submit" class="edit-category">Update</button>
                        <button type="button" class="cancel-update delete-category" data-id="<%= category._id %>">Cancel</button>
                    </div>
                    
                </form>
            </li>
        <% }); %>
    </ul>
</div>

<script>
    $(document).ready(function() {
        // Handle category addition
        $('#addCategoryForm').submit(function(e) {
            e.preventDefault();
            $.ajax({
                url: '/admin/categories/add',
                method: 'POST',
                data: $(this).serialize(),
                success: function(response) {
                    $('#message').html('<p>Category added successfully!</p>');
                    // Optionally refresh the category list or add the new category to the list
                },
                error: function(err) {
                    $('#message').html('<p>Error adding category.</p>');
                }
            });
        });

        // Handle category editing
        $('.edit-category').click(function() {
            const categoryId = $(this).data('id');
            $('#update-form-' + categoryId).show();
        });

        // Handle canceling category update
        $('.cancel-update').click(function() {
            const categoryId = $(this).data('id');
            $('#update-form-' + categoryId).hide();
        });

        // Handle category update
        $('.update-form').submit(function(e) {
            e.preventDefault();
            const form = $(this);
            $.ajax({
                url: form.attr('action'),
                method: 'POST',
                data: form.serialize(),
                success: function(response) {
                    $('#message').html('<p>Category updated successfully!</p>');
                    // Optionally refresh the category list or update the edited category in the list
                },
                error: function(err) {
                    $('#message').html('<p>Error updating category.</p>');
                }
            });
        });
    });
</script>